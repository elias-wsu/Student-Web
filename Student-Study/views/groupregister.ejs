          <div class="form-group">
            <label for="expiration-date" class="form-label">Exp. date</label>
            <input
              type="date"
              id="expirationdate"
              name="expirationdate"
              class="form-control"
              placeholder=""
              required
            />
          </div>
          <div class="form-group">
            <label for="description" class="form-label"></label>
            <textarea
              id="description"
              name="description"
              class="form-control"
              placeholder="BIO"
              required
            ></textarea>
          </div>
          <button type="submit" id="register-button">Register</button>
        </form>
      </div>
    </div>
  </body>
</html>
